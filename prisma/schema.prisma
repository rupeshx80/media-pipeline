generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id            String   @id @default(uuid())
  key           String
  url           String
  fileType      String
  originalName  String
  size          Int
  duration      Int?
  width         Int?
  height        Int?
  contentType  String?
  createdAt     DateTime @default(now())
}
